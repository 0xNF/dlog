{
    "targets": [
        {
            "name": "logdebug",
            "type": "Debug"
        },
        {
            "name": "logfile",
            "type": "File",
            "fileName": "file.txt"
        },
        {
            "name": "logconsole",
            "type": "Console"
        },
        {
            "name": "debugWithThingsThatWillAllTurnIntoFixedText",
            "type": "Debug",
            "layout": {
                "layout": "${literal:text='literal'}${newline}${dir-separator}"
            }
        }
    ],
    "rules": [
        {
            "name": "*",
            "minlevel": "Info",
            "writeTo": "logconsole"
        },
        {
            "name": "*",
            "minlevel": "Debug",
            "writeTo": "logfile"
        },
        {
            "name": "*",
            "minlevel": "Debug",
            "writeTo": "logdebug"
        },
        {
            "name": "*",
            "minlevel": "Debug",
            "writeTo": "debugWithThingsThatWillAllTurnIntoFixedText"
        }
    ],
    "variables": []
}